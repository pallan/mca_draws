%h1=@bonspiel.name

%p
  %strong Select a team: 
  = select_tag('rink', options_from_collection_for_select(Rink.order('name ASC').all, :name, :name), :id => 'rink_select')

- @bonspiel.draws.order('number desc').limit(4).each do |draw|
  
  %h2="Draw #{draw.number}"
  %table.table.table-striped
    %thead
      %tr
        %th Event
        %th Sheet
        %th Club
        %th Black
        %th Red
    %tbody
      - draw.matches.each do |m|
        %tr
          %td= m.event.try(:name)
          %td= m.sheet
          %td= m.club
          %td= m.black
          %td= m.red
        